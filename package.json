{
  "name": "thunderbot",
  "version": "0.0.1",
  "description": "Bot de Whatsapp focado em empresas de pequeno porte",
  "main": "src/index.js",
  "scripts": {
    "test": "node src/tests/test.js",
    "start": "node --trace-deprecation src/index.js",
    "pack": "pkg ."
  },
  "bin": "src/index.js",
  "pkg": {
    "scripts": "src/*.js",
    "assets": [
      "settings/*.json",
      "session/thunderbot.json"
    ],
    "targets": [
      "node12-win",
      "node12-linux"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/whatsappbot2/thunderbot.git"
  },
  "keywords": [
    "thunderbot",
    "whatsapp-bot"
  ],
  "author": "Lucas Vieira de Jesus",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://gitlab.com/whatsappbot2/thunderbot/issues"
  },
  "homepage": "https://gitlab.com/whatsappbot2/thunderbot#readme",
  "dependencies": {
    "cli-spinner": "^0.2.10",
    "log-timestamp": "^0.3.0",
    "pkg": "^4.4.8",
    "puppeteer-core": "^3.0.2",
    "qrcode-terminal": "^0.12.0",
    "run": "^1.4.0",
    "whatsapp-web.js": "^1.5.1"
  }
}
